<main class="login-page">

  <header class="header" id="login-page-header">
    {{! <h1 class="welcome-message">ShopHub</h1> }}
    <div class="logo-container">
      <img class="logo" src="/images/Color logo.png" alt="Logo" />
    </div>
  </header>

  <div class="form-row">
    <div class="form-container form-1">
      <h2 class="form-message form-message-1">Already a User? Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="login-button" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="form-container form-2">
      <h2 class="form-message form-message-2">New? Please Signup</h2>

      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">Username:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="signup-button" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>

  <footer class="footer">
    <h2>Get in touch with us</h2>
    <div class="footer-contacts">
      <a href="mailto:shophub@shophub.com">shophub@shophub.com</a>
      <p>800-111-2323</p>
      <p>Unit 3 - 666 Shophub Ave, Toronto, ON</p>
    </div>

    {{! <div class="footer-socials">
      <p>Github Logo Goes here</p>
      <p>Twitter Logo Goes here</p>
    </div> }}
  </footer>

</main>

<script src="/js/login.js"></script>